# macOS-only check
if [[ "$(uname -s)" != "Darwin" ]]; then
    echo "‚ùå Error: ElohimOS is macOS-only. Detected OS: $(uname -s)"
    echo "This system requires macOS (Darwin) to run."
    exit 1
fi

SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
cd "$SCRIPT_DIR"

# Update PYTHONPATH to include packages
export PYTHONPATH="$SCRIPT_DIR/packages:$PYTHONPATH"

# Start using the existing script
./tools/scripts/start_web.sh
